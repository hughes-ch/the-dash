{
  "author": "hughes-ch <contact@chrishughesdev.com>",
  "description": "Personal dashboard for Chris Hughes",
  "devDependencies": {
    "create-react-app": "^4.0.3",
    "netlify-cli": "^6.14.25"
  },
  "license": "MIT",
  "main": "index.js",
  "name": "the-dash",
  "private": true,
  "repository": "https://github.com/hughes-ch/the-dash.git",
  "scripts": {
    "build": "yarn workspace @the-dash/ui build",
    "prebuild": "yarn install && yarn test",
    "host": "concurrently --kill-others-on-fail 'yarn:host-*'",
    "host-ui": "yarn workspace @the-dash/ui start",
    "host-api": "export USE_LOCAL_DB=1 && yarn netlify functions:serve",
    "prehost-api": "yarn workspace @the-dash/api setup-local-env",
    "test": "yarn workspace @the-dash/api test && yarn workspace @the-dash/ui test --watchAll=false"
  },
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^6.4.0"
  }
}
